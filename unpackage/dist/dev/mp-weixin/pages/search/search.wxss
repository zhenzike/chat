.content {
  padding-top: 25px;
}
.top-bar {
  position: fixed;
  z-index: 1000;
  top: 25px;
  left: 0;
  width: 100%;
  height: 88rpx;
  background: #ffffff;
}
.top-bar .top-bar-r {
  float: right;
  padding-right: 32rpx;
}
.top-bar .top-bar-r .text {
  font-size: 32rpx;
  font-weight: 600;
  color: #272832;
  line-height: 88rpx;
}
.top-bar .search-div {
  position: absolute;
  float: left;
  top: 0;
  left: 0;
  width: 100%;
  z-index: -1;
  box-sizing: border-box;
  padding: 14rpx 118rpx 14rpx 32rpx;
}
.top-bar .search-div .search {
  padding: 0 60rpx 0 12rpx;
  height: 60rpx;
  background: #F3F4F6;
  border-radius: 10px;
}
.top-bar .search-div image {
  position: absolute;
  right: 130rpx;
  top: 24rpx;
  width: 40rpx;
  height: 40rpx;
}
.main {
  padding: 88rpx 32rpx 0;
  box-sizing: border-box;
}
.main .result {
  padding-top: 34rpx;
}
.main .result .title {
  font-size: 44rpx;
  color: #272832;
  font-weight: 600;
  line-height: 60rpx;
}
.main .result .list-user {
  width: 100%;
  padding: 20rpx 0;
  height: 80rpx;
}
.main .result .list-user image {
  float: left;
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
}
.main .result .list-user .names {
  float: left;
  padding-left: 32rpx;
}
.main .result .list-user .names .name {
  font-size: 36rpx;
  color: #272832;
  line-height: 50rpx;
  font-weight: 400;
}
.main .result .list-user .names .mail {
  font-size: 24rpx;
  color: #272832;
  line-height: 28rpx;
}
.main .result .list-user .right-bt-send {
  float: right;
  width: 120rpx;
  height: 48rpx;
  background: #7FFFD4;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: white;
  font-weight: 500;
  line-height: 48rpx;
  text-align: center;
  margin-top: 16rpx;
}
.main .result .list-user .right-bt-add {
  float: right;
  width: 120rpx;
  height: 48rpx;
  border-radius: 12rpx;
  border: 1px solid #bebebe;
  font-size: 24rpx;
  color: #272832;
  font-weight: 500;
  line-height: 48rpx;
  text-align: center;
  margin-top: 16rpx;
}

