.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 25px;
  padding-bottom: 32rpx;
}
.top-bar {
  position: fixed;
  z-index: 1000;
  top: 25px;
  left: 0;
  width: 100%;
  height: 88rpx;
  box-sizing: border-box;
  background: #ffffff;
  border-bottom: 1px solid rgba(39, 40, 50, 0.1);
  padding-left: 32rpx;
  padding-right: 32rpx;
}
.top-bar .top-bar-left {
  float: left;
  margin-top: 10rpx;
}
.top-bar .top-bar-left image {
  width: 68rpx;
  height: 68rpx;
  border-radius: 16rpx;
  background-color: #ffe431;
}
.top-bar .top-bar-center {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -34rpx;
  margin-left: -17rpx;
}
.top-bar .top-bar-center image {
  width: 68rpx;
  height: 68rpx;
}
.top-bar .top-bar-right {
  float: right;
  margin-top: 15rpx;
}
.top-bar .top-bar-right .search {
  display: inline-block;
  margin-right: 20rpx;
}
.top-bar .top-bar-right .add {
  display: inline-block;
}
.top-bar .top-bar-right image {
  width: 52rpx;
  height: 52rpx;
}
.main {
  width: 100%;
  padding-top: 96rpx;
  box-sizing: border-box;
}
.friends-list {
  height: 96rpx;
  padding: 16rpx 32rpx;
}
.friends-list:active {
  background-color: #f3f4f6;
}
.friends-list .friend-list-l {
  position: relative;
  float: left;
}
.friends-list .friend-list-l image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
}
.friends-list .friend-list-l .tip {
  position: absolute;
  z-index: 10;
  top: -8rpx;
  left: 68rpx;
  height: 36rpx;
  min-width: 20rpx;
  padding: 0 8rpx;
  background-color: #ff5d5b;
  border-radius: 18rpx;
  font-size: 24rpx;
  color: #fff;
  line-height: 36rpx;
  text-align: center;
}
.friends-list .friend-list-r {
  padding-left: 128rpx;
}
.friends-list .friend-list-r .top {
  height: 50rpx;
}
.friends-list .friend-list-r .top .name {
  float: left;
  font-size: 36rpx;
  color: #272832;
  line-height: 50rpx;
}
.friends-list .friend-list-r .top .time {
  float: right;
  font-size: 24rpx;
  color: rgba(39, 40, 50, 0.4);
}
.friends-list .friend-list-r .news {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
  color: rgba(39, 40, 50, 0.6);
  line-height: 40rpx;
}

