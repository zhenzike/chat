.content {
  padding-top: 25px;
  position: relative;
}
.top-bar {
  position: fixed;
  z-index: 100;
  top: 25px;
  left: 0;
  width: 100%;
  height: 88rpx;
  background: white;
  border-bottom: 1px solid rgba(39, 40, 50, 0.1);
}
.top-bar .top-bar-l {
  float: left;
  padding-left: 32rpx;
  line-height: 88rpx;
  width: 88rpx;
}
.top-bar .top-bar-l .title {
  font-size: 32rpx;
  color: #272832;
  font-weight: 400;
}
.top-bar .top-bar-center {
  font-size: 40rpx;
  color: #272832;
  font-weight: 400;
  line-height: 88rpx;
  text-align: center;
  margin-right: 78rpx;
}
.main {
  padding-top: 168rpx;
  display: flex;
  flex-direction: column;
}
.main .group-img {
  position: relative;
  margin: 0 auto;
  width: 196rpx;
  height: 196rpx;
  border: 1px solid #dfe7f6;
  border-radius: 40rpx;
  overflow: hidden;
}
.main .group-img .pen {
  position: absolute;
  margin: auto;
  z-index: 10;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 56rpx;
  height: 56rpx;
}
.main .group-img .group-icon {
  width: 100%;
  height: 100%;
}
.main .group-name {
  padding: 62rpx 32rpx 0;
}
.main .group-name .inputName {
  width: 686rpx;
  height: 92rpx;
  background: #F3F4F6;
  border-radius: 46rpx;
  font-size: 36rpx;
  color: #272832;
  font-weight: 400;
  text-align: center;
}
.main .friends {
  padding: 32rpx 20rpx;
}
.main .friends .scroll-view {
  box-sizing: border-box;
  height: 938rpx;
  padding-bottom: 35rpx;
}
.main .friends .title {
  font-size: 44rpx;
  color: #272832;
  font-weight: 600;
}
.main .friends .user {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 120rpx;
}
.main .friends .user .selected {
  width: 48rpx;
  height: 48rpx;
  margin-right: 32rpx;
  background: rgba(41, 255, 166, 0.3);
  border-radius: 24rpx;
}
.main .friends .user .selected image {
  width: 48rpx;
  height: 48rpx;
}
.main .friends .user .is-selected {
  width: 48rpx;
  height: 48rpx;
  margin-right: 32rpx;
  background: #29ffa6;
  border-radius: 24rpx;
}
.main .friends .user .is-selected image {
  width: 48rpx;
  height: 48rpx;
}
.main .friends .user .user-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
}
.main .friends .user .name {
  margin-left: 32rpx;
  font-size: 36rpx;
  color: #272832;
  font-weight: 400;
}
.btn-div {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 104rpx;
  padding: 0 40rpx 12rpx;
  box-sizing: border-box;
}
.btn-div .btn {
  width: 684rpx;
  height: 80rpx;
  background: #7FFFD4;
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: white;
}
.btn-div .select-btn {
  background: #2ba245;
}

