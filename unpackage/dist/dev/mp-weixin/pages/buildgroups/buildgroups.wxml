<view class="content"><view class="top-bar"><view class="top-bar-l"><view data-event-opts="{{[['tap',[['back',['$event']]]]]}}" class="title" bindtap="__e">取消</view></view><view class="top-bar-center">创建群聊</view></view><view class="main"><view data-event-opts="{{[['tap',[['sendImg',['$event']]]]]}}" class="group-img" bindtap="__e"><image class="pen" src="../../static/images/common/change.png"></image><image class="group-icon" src="{{tempFilePaths}}" mode="scaleToFill"></image></view><view class="group-name"><input class="inputName" type="text" placeholder="输入群名" data-event-opts="{{[['blur',[['isNull',['$event']]]]]}}" bindblur="__e"/></view><view class="friends"><view class="title">用户</view><scroll-view class="scroll-view" scroll-y="true"><block wx:for="{{user}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['selectFriend',[index]]]]]}}" class="user" bindtap="__e"><view class="{{['selected',item.select?'is-selected':'']}}"><block wx:if="{{item.select}}"><image src="../../static/images/common/True.png"></image></block></view><image class="user-icon" src="{{item.imgUrl}}"></image><view class="name">{{item.name}}</view></view></block></scroll-view></view></view><view class="btn-div"><view class="{{['btn',friendNumber!=0&&inputVal?'select-btn':'']}}">{{"创建("+friendNumber+")"}}</view></view></view>